# Configuration of the "dfs" context
dfs.class=<%= scope.lookupvar('hadoop::params::dfs_class') %>
dfs.period=<%= scope.lookupvar('hadoop::params::dfs_period') %>
<% scope.lookupvar('hadoop::params::dfs_opts').each do |k,v| -%>
<%= k %>=<%= v %>
<% end -%>

